#include "*sort.h"

short int verifySorted(int* numArr, int n, short int cmpOut) {
    numArr = bubbleSort(numArr, n);
    cmpOut = 1;
    int i = 0, j = 1;
    while(j != n) {
        if(numArr[i] > numArr[j]) {
            cmpOut = 0;
            break;
        }
        else {
          continue;
        }
        i++;
        j++;
    }
    return (cmpOut == 1);
}
